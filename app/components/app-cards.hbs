<section
  class="au-o-region-large au-d-component-block au-d-component-block--overflow au-u-background-gray-200 au-c-body-container"
>
  <div class="au-o-layout">
    <AuHeading @level="5" @skin="5">Applicaties met lokale data</AuHeading>
    <section
      class="au-o-grid au-o-grid--small au-u-margin-top-small"
      id="app-cards"
    >
      {{#each @apps as |app|}}
        <div class="au-o-grid__item au-u-1-2@small au-u-1-3@medium">
          <a href={{app.link}} target="_blank" rel="noopener noreferrer">
            <AuCard @shadow={{true}} as |c|>
              <c.header>
                <div class="au-u-flex au-u-flex--vertical-center">
                  <AuBadge
                    class="au-u-margin-bottom-none"
                    @icon={{app.icon}}
                    @skin="brand"
                    @size={{this.size}}
                    @number={{this.number}}
                  />
                  <AuHeading @level="2" @skin="4">
                    {{app.name}}
                  </AuHeading>
                </div>
              </c.header>
              <c.content>
                <p>{{app.description}}</p>
              </c.content>
              <c.footer>
                <p class="au-u-margin-none">
                  <AuLinkExternal
                    href={{app.link}}
                    @skin="button"
                    @icon="link-external"
                  >
                    Meer informatie
                  </AuLinkExternal>
                </p>
              </c.footer>
            </AuCard>
          </a>
        </div>
      {{/each}}
    </section>
  </div>
</section>